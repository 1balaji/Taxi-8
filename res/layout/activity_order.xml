<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dip"
    android:background="@drawable/background" >

    <LinearLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:text="Параметры заказа:"
            android:textColor="@color/information_text_color" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/separator_info" />

        <LinearLayout
            android:id="@+id/from_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Адрес подачи *"
                 />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/white"
                android:text="Дом*"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/from_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/from_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_weight="1"
                android:background="@drawable/o_bottom_line"
                android:inputType="textPostalAddress"
               >

                <requestFocus android:layout_width="wrap_content" />
            </EditText>

            <EditText
                android:id="@+id/from_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_weight="3"
                android:background="@drawable/o_bottom_line"
                android:inputType="number"
               />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/from2_heder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textColor="@color/white"
                android:text="Подъезд"
                 />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/white"
                android:text="Примечание"
               />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/from2_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6" >

            <EditText
                android:id="@+id/from_porch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_weight="6"
                android:background="@drawable/o_bottom_line"
                android:inputType="number"
                android:textColor="@color/information_text_color" />

            <EditText
                android:id="@+id/from_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_weight="4"
                android:background="@drawable/o_bottom_line"
                android:ems="10"
                android:textColor="@color/information_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/to_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Адрес (куда) *"
                />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/white"
                android:text="Дом *"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/to_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/to_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_weight="1"
                android:background="@drawable/o_bottom_line"
                android:inputType="textPostalAddress"
                android:textColor="@color/information_text_color" />

            <EditText
                android:id="@+id/to_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_weight="3"
                android:background="@drawable/o_bottom_line"
                android:inputType="number"
                android:textColor="@color/information_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkboxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                android:paddingLeft="88dip"
                android:text="По городу"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_selector"
                android:checked="false"
                android:paddingLeft="88dip"
                android:text="Универсал"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkboxes2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/CheckBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_selector"
                android:checked="false"
                android:paddingLeft="88dip"
                android:text="Кондиционер"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <CheckBox
                android:id="@+id/CheckBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_selector"
                android:checked="false"
                android:paddingLeft="88dip"
                android:text="Загрузка салона"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkboxes3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" >

            <CheckBox
                android:id="@+id/CheckBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:button="@drawable/checkbox_selector"
                android:checked="false"
                android:paddingLeft="88dip"
                android:text="Перевозка животного"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <CheckBox
                android:id="@+id/CheckBox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:layout_weight="2"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                android:paddingLeft="88dip"
                android:text="Предвари-тельный заказ"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сейчас"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="22:19"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/information_text_color" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Время подачи:"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="22:19"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/information_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Имя *"
                android:textColor="@color/information_text_color" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Телефон"
                android:textColor="@color/information_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6" >

            <EditText
                android:id="@+id/EditText02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_weight="6"
                android:background="@drawable/o_bottom_line"
                android:inputType="textPersonName"
                android:textColor="@color/information_text_color" />

            <EditText
                android:id="@+id/EditText01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_weight="4"
                android:background="@drawable/o_bottom_line"
                android:ems="10"
                android:inputType="phone"
                android:textColor="@color/information_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стоимость:"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999.00"
                android:textColor="@color/information_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_weight="1"
                android:background="@drawable/info_button_background_inactive"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="Стоимость"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_weight="1"
                android:background="@drawable/info_button_background_inactive"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="Заказать"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>